// form container

.form
	position relative
	box-sizing border-box
	
	select
	textarea
	input[type="text"]
	input[type="email"]
	input[type="password"]
		width 100%
		padding 0
		margin 0
		text-align left
		border none
		border-radius 0
		background-color transparent
		box-sizing border-box
		&:focus
			outline none
	
	.control
		position relative
		box-sizing border-box